generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String  @id @default(uuid())
  name                 String
  email                String  @unique
  phone                String  @unique
  password             String
  passwordResetToken   String?
  passwordResetExpires Float?

  @@map("users")
}

